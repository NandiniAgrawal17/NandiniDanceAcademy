doctype html
html
  head
    title Nandini Dnace Academy
    style
      include ../static/style.css
      include ../static/stylecontact.css
  body
    nav#navbar 
      ul
        div#logo 
           img(src="/static/img/logo.png")
           |NDA
           li #[a(href="/") Home] 
           li #[a(href="/missionSection") Mission] 
           li #[a(href="/sponsorsSection") Sponsors] 
           li #[a(href="/contact") Contact Us] 
    div.container 
        h1 Contact Us
        form(action='/contact',method="post",class="myForm")
            p Name
                input(type="text" class="myInput",name="name",placeholder="eg:John Doe")
            p Phone 
                input(type="phone" class="myInput",name="phone",placeholder="+919999xxxx")
            p Email-Id
                input(type="email" class="myInput",name="email",placeholder="eg:JohnDoe@gmail.com")
            p Address
                input(type="text" class="myInput",name="address",placeholder="eg:160 street colony")
            p Feedback
                input(type="text" class="myInput",name="feedback",placeholder="Nandinis Dance Academy is awesome")
            button(class="btn") 
                | Submit